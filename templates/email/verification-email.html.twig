{% apply inline_css(source('@styles/email.css')) %}
<!doctype html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">

    <meta name="viewport" content="width=device-width">
    
    <title>{{ email.subject }}</title>
</head>

<body>
<div class="body">
    <div class="container">
        <div class="header text-center">
            <div>
                <img src="{{ email.image('@images/email/logo.jpg') }}" class="logo" alt="MiastoSuwałki Logo">
            </div>
        </div>

        <div class="content">
            <h1 class="text-center">Witaj, {{ user.username }}!</h1>
            
            <h2 class="text-center">Dziękujemy za założenie konta</h2>
            
            <p class="block">
                W celu aktywacji konta należy kliknąć poniższy przycisk 
            </p>

            <div class="text-center">
                <a href="{{ url }}" class="block btn">Tak, chcę aktywować konto</a>
            </div>
        </div>

        <div class="footer">
        </div>
    </div>
</div>
</body>
</html>
{% endapply %}